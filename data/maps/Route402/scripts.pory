script Route402_EventScript_Fisherman2 {
    while (flag(FLAG_TEMP_1) == FALSE) {
        playse(SE_PIN)
        applymovement(LOCALID_FISHERMAN_2, Common_Movement_ExclamationMark)
        waitmovement(0)
        msgbox("Did I just catch a glimpse of a GYARADOS!", MSGBOX_NPC)
        setflag(FLAG_TEMP_1)
        end
    }
    msgbox("Did you just see that too?!", MSGBOX_NPC)
    setflag(FLAG_TEMP_1)
    end
}

